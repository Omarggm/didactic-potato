<!-- views/dashboard.handlebars -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Dashboard</title>
  </head>
  <body>
    <h1>Welcome to Your Dashboard, {{username}}!</h1>
    <h2>Your Posts:</h2>
    <ul>
      {{#each posts}}
        <li>{{this.title}}</li>
      {{/each}}
    </ul>
    <a href="/create-post">Create a New Post</a>
    <a href="/logout">Logout</a>
  </body>
</html>
