{{!-- Link the CSS file --}}
<link rel="stylesheet" href="../public/css/style.css" />

<!-- Loop over each object in the blogposts array -->
<h2 class="panel">Latest Blog Posts:</h2>
<div class="container">

{{#each blogposts as |blog|}}
  <div class="panel">
    <div>
      <h2>
        <a href="/blog/{{blog.id}}" class="panel">{{blog.blog_title}}</a>
      </h2>
      <p class="panel">Created by {{blog.author.name}} on {{format_date blog.date_created}}</p>
    </div>
    <div>
      <p class="panel">
        {{blog.blog_content}}
      </p>
    </div>
  </div>
{{/each}}

</div>
