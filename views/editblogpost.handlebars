<div class="edit-blogpost-container">
  <div class="edit-blogpost-wrapper">
    <h3 class="edit-blogpost-heading">Edit Blog Post:</h3>

    <form class="edit-blogpost-form">
      <div class="form-group">
        <input
          type="hidden"
          id="blogpost-id"
          name="blogpost-id"
          value="{{id}}"
        />
        <label for="blogpost-title">Title:</label>
        <input
          class="form-input"
          type="text"
          id="blogpost-title"
          name="blogpost-title"
          value="{{blog_title}}"
        />
      </div>

      <div class="form-group">
        <label for="blogpost-content">Content:</label>
        <textarea
          class="form-input"
          type="text"
          id="blogpost-content"
          name="blogpost-content"
        >{{blog_content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="update-post-button">Update Blog Post</button>

        <button type="submit" class="delete-post-button">Delete Blog Post</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/editblogpost.js"></script>