<div class="create-blogpost-container">
  <div class="create-blogpost-wrapper">
    <h3 class="create-blogpost-heading">Create a New Blog Post:</h3>

    <form class="new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-title">Title:</label>
        <input
          class="form-input"
          type="text"
          id="blogpost-title"
          name="blogpost-title"
        />
      </div>

      <div class="form-group">
        <label for="blogpost-content">Content:</label>
        <textarea
          class="form-input"
          id="blogpost-content"
          name="blogpost-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="create-blogpost-button">Create</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/createblogpost.js"></script>
