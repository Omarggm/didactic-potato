<link rel="stylesheet" href="../public/css/style.css" />

<div class="container container-fluid mt-5">

  <div class="row mt-4">
    <div class="col-md-6">
      <h3 class="panel">Create a New Blog Post:</h3>

      <form class="form new-blogpost-form">
        <div class="form-group">
          <label for="blogpost-title" class="panel">Title:</label>
          <input
            class="form-input panel"
            type="text"
            id="blogpost-title"
            name="blogpost-title"
          />
        </div>

        <div class="form-group">
          <label for="blogpost-content" class="panel">Content:</label>
          <textarea
            class="form-input panel"
            id="blogpost-content"
            name="blogpost-content"
          ></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary panel">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="../public/js/createblogpost.js"></script>
