{{!-- views/home.handlebars --}}

{{!-- Extend the main layout --}}
{{#extend 'main'}}

{{!-- Define the section for content --}}
{{#section 'content'}}

<div>
  <h1>Welcome to the Blog!</h1>
  {{#if posts}}
    {{#each posts}}
      <div>
        <h2>{{title}}</h2>
        <p>{{content}}</p>
        <p>Written by: {{user.username}}</p>
        <p>Published on: {{createdAt}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No posts found.</p>
  {{/if}}
</div>

{{/section}}
