<link rel="stylesheet" href="../public/css/style.css" />

<div class="container">
  <h2 class="panel">{{blog_title}}</h2>
  <p>Authored by: {{author.name}} on {{format_date date_created}}</p>
  <p class="panel">{{blog_content}}</p>

  <h2 class="panel">Comments:</h2>
  <ul>
    {{#each comments as |comment|}}
      <li class="panel">
        <h5>{{comment.comment_content}}</h5>
        <p class="panel">Comment by:
          {{comment.author.name}}
          on
          {{format_date comment.date_created}}</p></li>
    {{/each}}
  </ul>

  <h3 class="panel">Add New Comment:</h3>
  <form class="form new-comment-form">
    <div class="form-group">
      <input type="hidden" id="blogpost-id" name="blogpost-id" value="{{id}}" />
      <label for="comment-content">Comment:</label>
      <textarea
        class="form-input panel"
        id="comment-content"
        name="comment-content"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit Comment</button>
    </div>
  </form>
</div>

<script src="/js/createcomment.js"></script>